<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.william.myapplication.About">

    <TextView
        android:id = "@+id/one"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "20sp"
        android:text = "Hello World!" />

    <TextView
        android:id = "@+id/two"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "15sp"
        android:text = "\nThe purpose of this app is to find friends who are near you."
        android:layout_below = "@id/one"/>

    <TextView
        android:id = "@+id/three"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "15sp"
        android:text = "\nUsing GPS, we tell you when your friends are near."
        android:layout_below = "@id/two"/>

    <TextView
        android:id = "@+id/four"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:textSize = "15sp"
        android:text = "\nBy 'slapping' the slap button, you send a message to friends near you."
        android:layout_below = "@id/three"/>

</RelativeLayout>
