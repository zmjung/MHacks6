<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "wrap_content"
    android:layout_height = "wrap_content">
    <LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:paddingLeft = "@dimen/activity_horizontal_margin"
        android:paddingRight = "@dimen/activity_horizontal_margin"
        android:paddingTop = "@dimen/activity_vertical_margin"
        android:orientation = "vertical"
        android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:gravity = "center"
            android:textStyle="bold"
            android:text = "PRESS ME TO SLAP A NEARBY FRIEND!!!"
            android:textSize = "25sp"/>
    </LinearLayout>

    <ImageView android:id = "@+id/friend"
        android:layout_width = "50dp"
        android:layout_height = "50dp"
        android:onClick = "addFriendMenu"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above = "@+id/friendbutton"
        android:src = "@drawable/friendlist_2"/>

    <Button android:id = "@+id/friendbutton"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text = "@string/button_friendList"
        android:layout_gravity = "bottom"
        android:onClick = "friendsListMenu"
        android:layout_alignParentBottom = "true" />                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                            

    <TextView
        android:id = "@+id/last_update_time_text"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content" />

    <ImageView android:id = "@+id/mybutton"
        android:layout_width = "280dp"
        android:layout_height = "280dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:onClick = "myFancyMethod"
        android:src = "@drawable/slap_2" />

    <ImageView android:id = "@+id/removeButton"
        android:layout_width = "50dp"
        android:layout_height = "50dp"
        android:onClick = "removeFriendMenu"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom = "10dp"
        android:layout_above = "@id/friendbutton"
        android:src = "@drawable/skull_2"/>

    <ImageView
        android:layout_width = "50dp"
        android:layout_height = "50dp"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom = "70dp"
        android:onClick = "about"
        android:layout_above = "@id/friendbutton"
        android:src = "@drawable/about" />


</RelativeLayout>

